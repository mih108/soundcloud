<div class="card text-center mt-4">
  <div class="card-header">
    <h2>Profile</h2>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @user.username %></h5>
    <p class="card-text"><%= @user.email %></p>
    <%= link_to("Change password", edit_user_registration_path, class: "btn btn-primary") %>
  </div>
  <div class="card-footer text-muted">
    <% for @m in @musics %>
        <div class="card">
            <div class="card-body">
                <div class="float-left">
                    <%= link_to(@m.title, music_path(@m.id)) %>
                </div>
                <div class="float-right">
                    <%= link_to("Edit", edit_music_path(@m.id)) %>
                    &nbsp;
                    <%= link_to("Delete", music_path(@m.id), method: :delete, data: { confirm: "Are you sure?" }) %>
                </div>
            </div>
        </div>
    <% end %>
  </div>
</div>